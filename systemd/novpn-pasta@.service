[Unit]
Description=Setup pasta interface for novpn
Wants=novpn-namespace.service
After=novpn-namespace.service

[Service]
Type=simple
ExecStart=pasta -f --runas 0 --netns novpn -I tap_%i --config-net --outbound-if4 %i --outbound-if6 %i
RestartOn=failure
RestartSec=5
StartLimitBurst=10
StartLimitIntervalSec=30

[Install]
WantedBy=multi-user.target
